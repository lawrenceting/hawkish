<p id="notice"><%= notice %></p>

<h1>Listing Trackers</h1>

<%= link_to 'New Tracker', new_tracker_path %>

<% @trackers.each do |tracker| %>
	<center>
		<p>
		  <div class="chart">
			  <div id="chart_<%= tracker.id %>"></div>
			  <div>
				  <%= link_to 'Show', tracker %>
				  <%= link_to 'Edit', edit_tracker_path(tracker) %>
				  <%= link_to 'Destroy', tracker, method: :delete, data: { confirm: 'Are you sure?' } %>
			  </div>
		  </div>	
		</p>	
	</center>
<% end %>

<script>
	$(function () {
		$.getJSON('/trackers', function (data) {
			
			data.map(function(tracker) {
				drawChart(tracker);
			}); //end map
		}); //end getJSON
	}); //end function
</script>
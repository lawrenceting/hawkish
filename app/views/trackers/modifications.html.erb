<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Content</th>
      <th>Tracker</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @modifications.each do |modification| %>
      <tr>
        <td><%= modification.date %></td>
        <td><%= modification.content %></td>
        <td><%= modification.Tracker %></td>
        <td><%= link_to 'Show', modification %></td>
        <td><%= link_to 'Edit', edit_modification_path(modification) %></td>
        <td><%= link_to 'Destroy', modification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>